{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "common/*": ["common/*"],
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"]
    }
  },
  "include": ["src", "**/*"],
  "exclude": ["node_modules"]
}
